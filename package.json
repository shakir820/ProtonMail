{
  "name": "proton-mail-app",
  "version": "1.0.0",
  "description": "Electron based Proton Mail app.",
  "main": "app.js",
  "scripts": {
    "start": "electron-forge start",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "Steven <hello@steve.is-a.dev> (https://steve.is-a.dev)",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^37.1.0"
  },
  "build": {
    "appId": "com.steve.protonmail",
    "productName": "Proton Mail",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{src,build,scripts,documentation}",
      "!node_modules/.bin"
    ],
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "icons/win/128.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/darwin_mac/1024.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/linux/1024.png"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  }
}
